@model List<Banhang.Models.Product>
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Quản lý sản phẩm";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h4>Danh sách sản phẩm</h4>
    <a class="btn btn-success" asp-action="Create">Thêm mới</a>
</div>
<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tên</th>
            <th>Giá</th>
            <th>Danh mục</th>
            <th>Tồn</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.ProductID</td>
                <td>@p.ProductName</td>
                <td>@p.Price.ToString("#,0")</td>
                <td>@p.CategoryName</td>
                <td>@p.Stock</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@p.ProductID">Sửa</a>
                    <form class="d-inline" method="post" asp-action="Delete" asp-route-id="@p.ProductID">
                        @Html.AntiForgeryToken()
                        <button class="btn btn-sm btn-danger" onclick="return confirm('Xóa sản phẩm?')">Xóa</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
