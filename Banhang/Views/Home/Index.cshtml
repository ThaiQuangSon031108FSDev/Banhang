@model List<Banhang.Models.Product>
@{
    ViewData["Title"] = "Trang chủ";
    var categories = ViewBag.Categories as List<Banhang.Models.Category>;
    var q = Context.Request.Query;                         // <— dùng Context.Request
    var selected = q["categoryId"].ToString();             // giá trị category hiện chọn
}
<div class="row mb-3">
    <div class="col">
        <form class="d-flex" asp-action="Search" method="get">
            <input name="q" class="form-control me-2" type="search" placeholder="Tìm tên / giá..." />
            <button class="btn btn-primary">Tìm</button>
        </form>
    </div>
    <div class="col-auto">
        <div class="btn-group">
            <a class="btn btn-outline-secondary @(string.IsNullOrEmpty(selected) ? "active" : "")"
               asp-action="Index">Tất cả</a>

            @if (categories != null)
            {
                foreach (var c in categories)
                {
                    <a class="btn btn-outline-secondary @(selected == c.CategoryID.ToString() ? "active" : "")"
                       asp-action="Index" asp-route-categoryId="@c.CategoryID">@c.CategoryName</a>
                }
            }
        </div>
    </div>
</div>

@if (Model == null || Model.Count == 0)
{
    <div class="alert alert-info">Chưa có sản phẩm.</div>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var p in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <img class="card-img-top" src="@(string.IsNullOrEmpty(p.ImageUrl)?"/images/noimg.png":p.ImageUrl)" alt="@p.ProductName" />
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@p.ProductName</h5>
                        <div class="mb-2 text-muted">@p.CategoryName</div>
                        <div class="fw-bold mb-3">@p.Price.ToString("#,0") đ</div>
                        <a class="btn btn-primary mt-auto" asp-action="Details" asp-route-id="@p.ProductID">Xem chi tiết</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
