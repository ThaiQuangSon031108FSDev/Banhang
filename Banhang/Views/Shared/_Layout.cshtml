@{
    Layout = null;
    var username = Context.Session.GetString("Username"); // bạn sẽ set khi đăng nhập
    var roleName = Context.Session.GetString("RoleName"); // set sau khi login
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Web Bán Hàng</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">

    <!-- Header / Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">Web Bán Hàng</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Trang chủ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Products" asp-action="Index">Sản phẩm</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Cart" asp-action="Index">
                            Giỏ hàng
                        </a>
                    </li>

                    @* Hiển thị menu Admin nếu đã đăng nhập và có quyền *@
                    @if (!string.IsNullOrEmpty(roleName) && (roleName == "Admin" || roleName == "Employee"))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">Quản trị</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" asp-controller="AdminProducts" asp-action="Index">QL Sản phẩm</a></li>
                                <li><a class="dropdown-item" asp-controller="AdminUsers" asp-action="Index">QL Thành viên</a></li>
                                <li><a class="dropdown-item" asp-controller="Reports" asp-action="Index">Báo cáo/Thống kê</a></li>
                            </ul>
                        </li>
                    }
                </ul>

                <form class="d-flex" asp-controller="Products" asp-action="Search" method="get">
                    <input name="q" class="form-control me-2" type="search" placeholder="Tìm tên / giá..." aria-label="Search" />
                    <button class="btn btn-outline-light" type="submit">Tìm</button>
                </form>

                <ul class="navbar-nav ms-3">
                    @if (string.IsNullOrEmpty(username))
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="Auth" asp-action="Login">Đăng nhập</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Auth" asp-action="Register">Đăng ký</a></li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <span class="navbar-text text-white me-2">Xin chào, @username!</span>
                        </li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Auth" asp-action="Logout">Đăng xuất</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main -->
    <main role="main" class="flex-grow-1">
        <div class="container py-4">
            @RenderBody()
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-white mt-auto">
        <div class="container py-3 d-flex justify-content-between">
            <span>&copy; @DateTime.Now.Year - Web Bán Hàng</span>
            <span>FPT Polytechnic · ASP.NET Core MVC</span>
        </div>
    </footer>

    @RenderSection("Scripts", required: false)

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
